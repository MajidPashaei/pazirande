@{
    ViewData["Title"] = "ورود به حساب کاربری";
    Layout= null;
}
@model ViewModelLayer.Portal.Vm_User;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>ورود به حساب کاربری</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="/font/iconsmind-s/css/iconsminds.css" />
    <link rel="stylesheet" href="/font/simple-line-icons/css/simple-line-icons.css" />
    <link rel="stylesheet" href="/css/vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/vendor/bootstrap.rtl.only.min.css" />
    <link rel="stylesheet" href="/css/vendor/bootstrap-float-label.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/Css/dore.light.bluenavy.min.css" />
</head>

<body class="background show-spinner no-footer">
    <div class="fixed-background"></div>
    <main>
        <div class="container">
            <div class="row h-100">
                <div class="col-12 col-md-10 mx-auto my-auto">
                    <div class="card auth-card ">
                        <div class="col-4">
                            <img src="~/img/login/logo png high quality.png" class="col-12 pt-3 " alt="">
                        </div>
                        @* <div class="position-relative image-side ">

                            <p class=" text-white h2"> پرتابل پذریندگان  </p>

                            <p class="white mb-0">
                                برای ورود به سیستم نام کاربری و رمز خود را وارد کنید
                            </p>
                        </div> *@
                        <div class="form-side col-8">
                            <a href="Dashboard.Default.html">
                                @* <img style="width: 100px; height: 100px; margin-right: 10px; margin-bottom: 10px;" src="~/img/login/logo png high quality.png" alt=""> *@
                            </a>
                            <center> <h1 style="font-weight: bolder;"> سامانه پذیرندگان نیکاتک </h1> </center>
                            <h6 class="mb-4">فراموشی رمز عبور</h6>
                            <form action="/login/CheekPassword" method="post">
                                <label class="form-group has-float-label mb-4">
                                    <input class="form-control" asp-for="UserName"/>
                                    <span>نام کاربری</span>
                                </label>
                                <label class="form-group has-float-label mb-4">
                                    <input class="form-control" asp-for="NationalCode"/>
                                    <span>کدملی</span>
                                </label>
                                @if ( ViewBag.er != null )
                                {
                                    <p class="alert alert-danger text-center">
                                        @ViewBag.er
                                    </p>
                                }
                                <div class="d-flex justify-content-end align-items-center">
                                    <button class="btn btn-primary btn-lg btn-shadow" type="submit">بازنشانی</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="/js/dore.script.js"></script>
    <script src="/js/scripts.single.theme.js"></script>
</body>

</html>