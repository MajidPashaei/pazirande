@{
    ViewData["Title"] = "ثبت کاربر جدید";
}
@model  ViewModelLayer.Portal.Vm_User;

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block mt-3" aria-label="breadcrumb">
                    <ol class="breadcrumb pt-0">
                        <li class="breadcrumb-item">
                            <a href="/admin/Home/index" style="text-decoration: none;">صفحه اصلی</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">ثبت نمایندگی  </li>
                    </ol>
                </nav>
                <div class="separator mb-5"></div>
            </div>
        </div>
        <div class="row">
            <div class="container-fluid">
                <div class="card mb-4">
                    <div class="card-body">
                        @if (ViewBag.ok !=null)
                        {   
                            <div class="alert alert-success rounded mb-3">
                                <p class="text-center"> @ViewBag.ok</p>
                            </div>
                            
                        }
                        <h5 class="mb-4 text-danger">پر کردن تمامی فیلد ها اجباری میباشد</h5>
                        <Form method="POST" action="/admin/home/NewUser" class="was-validated" enctype="multipart/form-data" autocomplete="off">
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">نام</label>
                                    <input required type="text" class="form-control" asp-for="Name" placeholder="نام">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">نام خانوادگی</label>
                                    <input required type="text" class="form-control" asp-for="Family"
                                        placeholder="نام خانوادگی">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">کد ملی</label>
                                    <input required type="text" class="form-control"  asp-for="NationalCode"
                                        placeholder="کد ملی">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">شماه تماس </label>
                                    <input required type="text" class="form-control"  asp-for="Phone" 
                                        placeholder="شماره تماس">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">کد نمایندگی</label>
                                    <input required type="text" class="form-control" asp-for="Code" placeholder="کد نمایندگی">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">نام کاربری</label>
                                    <input required type="text" class="form-control" asp-for="UserName"
                                        placeholder="نام کاربری ">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">رمز عبور</label>
                                    <input required type="password" class="form-control"  asp-for="Password"
                                        placeholder="رمز عبور">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">نقش</label>
                                    <input required type="text" class="form-control d-none" value="نمایندگی"  asp-for="Role" 
                                        placeholder="نقش">
                                    <input required type="text" class="form-control" value="نمایندگی" disabled >
                                </div>
                            </div>
                            <div class="text-left">
                                <button type="submit" class="btn btn-success  mt-3">ثبت</button>
                                <a href="/Admin/home/Index" class="btn btn-primary  mt-3 " style="width: min-content;">
                                    بازگشت
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>






